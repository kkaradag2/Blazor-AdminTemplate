                    </ul>
                </li>
            }
        </ul>
    </div>
</div>


@code{

    public async Task openMenu(string elementid)
    {
        await JS.InvokeVoidAsync("menuItem", elementid);
    }
    public async Task toggleSideBar()
    {
        await JS.InvokeVoidAsync("toggleSideBar", "");
    }
}